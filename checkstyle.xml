<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">

        <!-- ⚠️ Ensures there is an empty line between class/method/constructor/field/interface definitions -->
        <!-- Prevents structural elements from sticking together -->
        <module name="EmptyLineSeparator">
            <property name="allowNoEmptyLineBetweenFields" value="false"/>
            <property name="tokens"
                      value="CLASS_DEF, METHOD_DEF, CTOR_DEF, VARIABLE_DEF, FIELD_DEF, INTERFACE_DEF"/>
        </module>

        <!-- ❌ Disallows more than one consecutive blank line anywhere -->
        <!-- Helps reduce unnecessary vertical space and visual clutter -->
        <module name="RegexpMultiline">
            <property name="format" value="\n\s*\n\s*\n"/>
            <property name="message" value="Avoid multiple consecutive blank lines."/>
            <property name="illegalPattern" value="true"/>
        </module>

        <!-- ❌ Disallows blank lines at the very beginning of the file -->
        <!-- Keeps file header clean and consistent -->
        <module name="RegexpSingleline">
            <property name="format" value="\A\s*\n"/>
            <property name="message" value="Avoid blank lines at the beginning of the file."/>
            <property name="illegalPattern" value="true"/>
            <property name="ignoreComments" value="true"/>
        </module>

        <!-- ❌ Disallows blank lines after the final closing brace (}) of the file -->
        <!-- Keeps file endings clean and prevents accidental empty lines -->
        <module name="RegexpSingleline">
            <property name="format" value="\}\s*\n\s*\n"/>
            <property name="message" value="Avoid blank lines at the end of the file."/>
            <property name="illegalPattern" value="true"/>
        </module>

        <!-- ❌ Disallows multiple blank lines between blocks (e.g., } and {) -->
        <!-- Helps preserve compact and consistent block-to-block formatting -->
        <module name="RegexpMultiline">
            <property name="format" value="\}\s*\n\s*\n\s*\{"/>
            <property name="message" value="Avoid multiple blank lines between closing and opening braces."/>
            <property name="illegalPattern" value="true"/>
        </module>

        <!-- ⚠️ Disallows empty catch blocks -->
        <!-- Ensures exceptions are not silently ignored -->
        <module name="EmptyCatchBlock"/>

        <!-- ✅ Enforces consistent indentation rules -->
        <!-- Promotes readability and avoids mix of spaces/tabs -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="tabWidth" value="4"/>
        </module>
		
        <!-- ❌ Disallows blank lines between two statements within the same block -->
        <!-- Prevents unnecessary vertical spacing in tightly related logic -->
		<module name="RegexpSinglelineJava">
			<property name="format" value="^\s*$"/>
			<property name="message" value="Avoid blank lines inside code blocks."/>
			<property name="illegalPattern" value="true"/>
			<property name="ignoreComments" value="true"/>
		</module>

    </module>
</module>
